//Crie um algoritmo que permita fazer três conversões monetárias. O algoritmo deve receber o valor em real(R$) e apresentar os valores convertidos em:
//1. Dólar (1 dólar = 5,17 reais)   2. Euro (1 euro = 6,14 reais)   3. Peso argentino (1 peso argentino = 0,05 reais)

import java.util.Scanner;

class Main {
    public static void main(String[ ] args){
        Scanner myObj = new Scanner(System.in);
        System.out.println("Valor em real: ");
        
        int real = myObj.nextInt();
        
        System.out.println("Valor em dólar: " + real*5.17);
        System.out.println("Valor em euro: " + real*6.14);
        System.out.println("Valor em peso: " + real*0.05);
    }
}
